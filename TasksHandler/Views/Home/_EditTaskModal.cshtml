<div class="modal fade" id="edit-task-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edit-task-modal-title" data-bind="text: title"></h5>
                <button class="btn btn-close" type="button" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="txtTitleCreateTask" autocomplete="off"
                                   placeholder="Title" data-bind="value:title, event: {change: EditChangeTaskHandler}" />
                            <label for="txtTitleCreateTask">Task title</label>
                        </div>
                        <div class="mb-3">
                            <label>Description</label>
                            <textarea type="text" class="form-control" rows="4"
                                      data-bind="value:description, event: {change: EditChangeTaskHandler}"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <button data-bind="{click:DeleteTaskChoose}" class="btn btn-secondary mb-2 w-100 text-start">
                            <i class="bi bi-x-lg"></i>
                            Delete Task
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>