<label><i class="bi bi-paperclip">Attach files</i></label>
<button class="btn btn-secondary btn-sm" onclick="ClickAttachFile()"><i class="bi-info bi-plus "></i></button>
<input type="file" onchange="SelectTaskFile(event)"
    id="TaskFile" multiple style="display:none"/>

<div data-bind="foreach: attachedFiles">
    <div>
        <div class="fw-bold" style="cursor:pointer" 
            data-bind="text:title, hidden: editMode, click: ClickTitleAttachedFile">
        </div>
        
        <div data-bind="visible:editMode, event: {focusout: HandleFocusoutAttachedFile}">
            <input name="txtTitleAttachedFile" type="text" class="form-control"
            data-bind="value: title, attr:{'data-id':id}"/>
        </div>
        
        <div>
            Added <span data-bind="text: published"></span> - 
            <span class="fw-bold" style="cursor: pointer" data-bind="click: ClickDeleteAttachedFile">Delete</span> - 
            <span class="fw-bold" style="cursor:pointer" data-bind="click: ClickDownloadAttachedFile">Donwload</span>
        </div>
    </div>
</div>